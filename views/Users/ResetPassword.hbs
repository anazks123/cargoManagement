<body>

{{>VisitorHeader}}
<div class="container col-md-6">
    <div class="jumbotron" style="margin-top: 20%;">
         <center><h3 style="color: #557a95;font-weight:bolder;">Reset Here</h3></center>
        <form action="/resetPassword" method="post">
            

            <div class="row col-md-18" style="margin-top: 20px;">
                <div class="col">
                <input type="password" class="form-control styling" placeholder="New Password" name="password" >
                </div>
                
            </div>

             <div class="row col-md-18" style="margin-top: 20px;">
            
                   <div class="col">
                <input type="password" class="form-control styling" placeholder="Re-Enter" name="reenter">
                </div>
                
                
            </div>

            

             <input type="hidden" name="_csrf" value="{{csrfToken}}">
       <center><button type="submit" id="userlogin" class="btn btn-primary col-md-6" style="margin-top: 20px;" >GO</center> 
      
            
    
            
            </form>

            

            <div style="margin-top: 10px;">

            {{#if hasErrors}}
        <div class="alert" role="alert">
           {{# each msg1}}
                <center><p style="color: red;font-weight:bolder;"> {{this}}</p></center> 
               

           {{/each}}
        </div>
        {{/if}}
        </div>


    </div>
</div>

 

