<body>

{{>VisitorHeader}}
<div class="container col-md-6">
    <div class="jumbotron" style="margin-top: 20%;">
         <center><h3 style="color: #557a95;font-weight:bolder;">Get OTP</h3></center>
          <form action="/otp?_csrf={{csrfToken}}" method="post">
           <div class="row col-md-18" style="margin-top: 20px;">
               
                <div class="col-md-12 form-inline">
                   
                            <input type="text" class="form-control styling col-md-10" placeholder="Email Address" name="email">
                            
                            <input type="submit" class="btn btn-primary col-md-2" value="OTP">
                   
                </div>
            </div>
                 
             </form>
            
               
           
       

    </div>

            <div style="margin-top: 10px;">

            {{#if hasErrors}}
        <div class="alert" role="alert">
           {{# each msgemail}}
               <center><p style="color: red;font-weight:bolder;"> {{this}}</p></center>
           {{/each}}
        </div>
        {{/if}}
        </div>


    </div>
</div>

 

</body>